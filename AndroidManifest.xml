<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.polytech.devintandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        <activity
            android:name="com.polytech.devintandroid.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.polytech.devintandroid.GameActivity"
            android:label="@string/title_activity_game"
            android:parentActivityName="com.polytech.devintandroid.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polytech.devintandroid.MainActivity" />
        </activity>
        <activity
            android:name="com.polytech.devintandroid.HelpActivity"
            android:label="@string/title_activity_help"
            android:parentActivityName="com.polytech.devintandroid.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polytech.devintandroid.MainActivity" />
        </activity>
        <activity
            android:name="com.polytech.devintandroid.OptionsActivity"
            android:label="@string/title_activity_options"
            android:parentActivityName="com.polytech.devintandroid.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polytech.devintandroid.MainActivity" />
        </activity>
        <activity
            android:name="com.polytech.devintandroid.OpenglActivity"
            android:label="@string/title_activity_opengl"
            android:parentActivityName="com.polytech.devintandroid.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.polytech.devintandroid.MainActivity" />
        </activity>
        <activity
            android:name="com.polytech.devintAndroid.voice.VoiceActivity"
            android:label="@string/title_activity_voice" >
        </activity>
    </application>

</manifest>
