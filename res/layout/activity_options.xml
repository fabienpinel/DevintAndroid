<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".OptionsActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPTIOOOOOOOOOONSSS !!!!!"
        android:textColor="#000000" />

    <Spinner
        android:id="@+id/selectionTheme"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="@dimen/menuDimension"
        android:textStyle="bold"
        android:entries="@array/choixTheme" />

     <Button
         android:id="@+id/applyOptions"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/selectionTheme"
         android:layout_below="@+id/selectionTheme"
         android:layout_marginTop="36dp"
         android:layout_weight="0.20"
         android:text="Appliquer"
         android:textSize="@dimen/menuDimension"
         android:textStyle="bold" />
     <Button
         android:id="@+id/backOptions"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/applyOptions"
         android:layout_marginTop="22dp"
         android:layout_weight="0.20"
         android:text="Retour"
         android:textSize="@dimen/menuDimension"
         android:textStyle="bold" />

</RelativeLayout>