<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/texthelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/titreFond"
        android:gravity="center_vertical|center_horizontal"
        android:text="OPTIONS"
        android:textColor="#000000"
        android:textSize="@dimen/titreDimension"
        android:textStyle="bold"
         />
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
     >

    

    <Spinner
        android:id="@+id/selectionTheme"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="@dimen/menuDimension"
        android:textStyle="bold"
        android:entries="@array/choixTheme" />
    
    <Spinner
        android:id="@+id/selectionCar"
        android:layout_width="match_parent"
        android:layout_height="80dip"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/selectionTheme"
        android:layout_marginTop="24dp"
        android:textSize="@dimen/menuDimension"
        android:textStyle="bold"
        android:entries="@array/choixCar" />

     <Button
         android:id="@+id/applyOptions"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/selectionCar"
         android:layout_below="@+id/selectionCar"
         android:layout_marginTop="36dp"
         android:layout_weight="0.20"
         android:text="Appliquer"
         android:textSize="@dimen/menuDimension"
         android:textStyle="bold" />
     <Button
         android:id="@+id/backOptions"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_below="@+id/applyOptions"
         android:layout_marginTop="22dp"
         android:layout_weight="0.20"
         android:text="Retour"
         android:textSize="@dimen/menuDimension"
         android:textStyle="bold" />

</RelativeLayout>
</LinearLayout>